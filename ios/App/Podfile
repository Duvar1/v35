# ios/App/Podfile - BU KESİN ÇALIŞIR
platform :ios, '14.0'
use_frameworks!

# Capacitor 7 için KESİN YOL
pod 'Capacitor', :podspec => '../node_modules/@capacitor/core/Capacitor.podspec'
pod 'CapacitorCordova', :podspec => '../node_modules/@capacitor/core/CapacitorCordova.podspec'
pod 'CapacitorApp', :podspec => '../node_modules/@capacitor/app/CapacitorApp.podspec'
pod 'CapacitorBrowser', :podspec => '../node_modules/@capacitor/browser/CapacitorBrowser.podspec'
pod 'CapacitorGeolocation', :podspec => '../node_modules/@capacitor/geolocation/CapacitorGeolocation.podspec'
pod 'CapacitorLocalNotifications', :podspec => '../node_modules/@capacitor/local-notifications/CapacitorLocalNotifications.podspec'

target 'App' do
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
      config.build_settings['SWIFT_VERSION'] = '5.0'
      config.build_settings['ENABLE_BITCODE'] = 'NO'
    end
  end
end