{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    "noImplicitAny": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "strictNullChecks": false,

    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true
  },

  "exclude": [
    "node_modules/@react-oauth",
    "node_modules/@codetrix-studio",
    "node_modules/@ionic/react"
  ]
}
